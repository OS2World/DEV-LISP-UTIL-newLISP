# makefile for newLISP v. 9.x.x on LINUX as a shared library - newlisp.so -
#
# Note, that readline support may require different libraries on different OSs
# 

OBJS = newlisp.o nl-symbol.o nl-math.o nl-list.o nl-liststr.o nl-string.o nl-filesys.o \
	nl-sock.o nl-import.o nl-xml.o nl-web.o nl-matrix.o nl-debug.o nl-utf8.o pcre.o unix-lib.o

CFLAGS = -Wall -pedantic -Wno-uninitialized -Wno-strict-aliasing -Wno-long-long -c -O2 -DLIBRARY -DSUPPORT_UTF8 -DLINUX

CC = gcc

default: $(OBJS)
	$(CC) $(OBJS) -lm -ldl -shared -o newlisp.so
	strip newlisp.so

.c.o:
	$(CC) $(CFLAGS) $<

$(OBJS): primes.h protos.h makefile_linux_lib_utf8



